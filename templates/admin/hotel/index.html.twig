{% extends 'adminbase.html.twig' %}

{% block title %}Hotel List{% endblock %}


{% block body %}

    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures ) { window.open( windowURL, windowName, windowFeatures ) ; 	}
    </SCRIPT>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <div class="col-md-4">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Accueil</a></li>
                            <li class="breadcrumb-item active" style="color: black">liste des habitats</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">La liste d'habitat</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                                            <a href="{{ path('admin_hotel_new') }}" class="btn btn-block btn-primary"> Ajouter Habitat </a>

                <div class="card-body">


                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                          
                            <th>titre</th>
                            <th>Image</th>
                            <th>Etoile</th>

                            <th>ville</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            

                            <th>I.Gallery</th>
                            <th>Chambre</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for hotel in hotels %}
                            <tr>
                                <td >{{ hotel.id }}</td>
                               
                                <td warp >{{ hotel.title }}</td>
                                <td>
                                    <img src="{{ asset('myapp/uploads/images/' ~ hotel.image) }}" alt="{{ hotel.title }}" height="40">  </td>
                                <td>{{ hotel.star }}</td>

                                <td>{{ hotel.city }}</td>
                                <td>{{ hotel.phone }}</td>
                                <td>{{ hotel.email }}</td>

                             

                                <td>
                                    <a href="javascript:openWin('{{ path('admin_image_new', {'id': hotel.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                     <img src="{{ asset('assets/admin/img') }}/gallery.png" alt="{{ hotel.title }}" height="40" title="Ä°mage Gallery">
                                    </a>
                                </td>

                                <td>
                                    <a href="javascript:openWin('{{ path('admin_room_new', {'id': hotel.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                        <img src="{{ asset('assets/admin/img') }}/room.jpg" alt="{{ hotel.title }}" height="40" title="Rooms">
                                    </a>
                                </td>


                                <td>
                                    <a href="{{ path('admin_hotel_show', {'id': hotel.id}) }}" class="btn btn-block btn-warning">consulter</a>

                                    <a href="{{ path('admin_hotel_edit', {'id': hotel.id}) }}" class="btn btn-block btn-primary">Modifier</a>

                                {{ include('admin/hotel/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="17"> pas resultats</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>



            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}

