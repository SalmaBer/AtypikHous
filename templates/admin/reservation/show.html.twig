{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Reservation</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Accueil</a></li>
                            <li class="breadcrumb-item active">Voir reservation</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Voir reservation</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation[0].id }}</td>
            </tr>
            <tr>
                <th>Utilisateur </th>
                <td><a href="{{ path('admin_user_show', {'id': reservation[0].userid}) }}">
                        {% for user in users %} {% if user.id == reservation[0].userid %} {{ user.name }} {{ user.surname }}   {% endif %} {% endfor %}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Habitat</th>{% for hotel in hotels %} {% if hotel.id == reservation[0].hotelid %}   <td><a href="{{ path('admin_hotel_show', {'id': hotel.id}) }}">
                    {{ hotel.title }}
                </a>
            </td>   {% endif %} {% endfor %}
            </tr>
            <tr>
                <th>Chambre</th><td>
                    {% for room in rooms %} {% if room.id == reservation[0].roomid %} {{ room.title }}   {% endif %} {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ reservation[0].name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ reservation[0].surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation[0].email }}</td>
            </tr>
            <tr>
                <th>N Telephone</th>
                <td>{{ reservation[0].phone }}</td>
            </tr>
            <tr>
                <th>Entrée</th>
                <td>{{ reservation[0].checkin ? reservation[0].checkin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sortie</th>
                <td>{{ reservation[0].checkout ? reservation[0].checkout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Jours</th>
                <td>{{ reservation[0].days }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ reservation[0].total }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ reservation[0].ip }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ reservation[0].message }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ reservation[0].note }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td> {% if reservation[0].status == 'New' %}
                        En attend
                    {% elseif reservation[0].status == 'Accepted' %}
                        Accepter
                    {% elseif reservation[0].status == 'Cancelled' %}
                        Annuler
                    {% else %}
                        Completer
                    {% endif %}</td>
            </tr>



        </tbody>
    </table>



    <a class="btn btn-primary" type="button" href="{{ path('admin_reservation_edit', {'id': reservation[0].id}) }}">Modifier</a>


    </div>
    <!-- /.card-body -->

    <!-- /.card-footer-->
    </div>
    <!-- /.card -->

    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}