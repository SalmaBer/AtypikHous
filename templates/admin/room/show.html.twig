{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ room.title }}</td>
            </tr>
            <tr>
                <th>Habitatid</th>
                <td>{{ room.hotelid }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ room.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ room.price }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ room.status }}</td>
            </tr>
            <tr>
                <th>Nomber</th>
                <td>{{ room.number }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-block btn-dark" href="{{ path('admin_room_index') }}">Retour</a>

    <a  class="btn btn-block btn-primary" href="{{ path('admin_room_edit', {'id': room.id}) }}">Modifier</a>

    {{ include('admin/room/_delete_form.html.twig') }}
{% endblock %}
