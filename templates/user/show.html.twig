{% extends 'page_user.html.twig' %}

{% block title %}{{ app.user.name  }} Profile{% endblock %}

{% block body %}


    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="/">Profile</a><i class="icon-angle-right"></i></li>
                        <li class="active">Voir profile</li>
                    </ul>
                </div>

            </div>
        </div>
    </section>

    <section id="maincontent">
        <div class="container">
            <div class="row">

                {{ include('user/usermenu.html.twig') }}

                <div class="span8">
                    <!-- start article 1 -->
                    
                        <div class="post-heading">
                            <h3><a href="#">Votre Profile </a></h3>
                        </div>
                        <div class="row">
                            <div class="span8">




                            <table class="table table-dark">
                                <tbody>
                                {# <tr>
                                    <th>Id</th>
                                    <td>{{ app.user.id }}</td>
                                </tr> #}
                                <tr>
                                    <th>Email</th>
                                    <td>{{ app.user.email }}</td>
                                </tr>

                                <tr>
                                    <th>Nom</th>
                                    <td>{{ app.user.name }}</td>
                                </tr>
                                <tr>
                                    <th>Nom utilisateur</th>
                                    <td>{{ app.user.surname }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>{{ app.user.image }}</td>
                                </tr>
                                {# <tr>
                                    <th>Status</th>
                                    <td>{{ app.user.status }}</td>
                                </tr> #}
                                {# <tr>
                                    <th>date de creation</th>
                                    <td>{{ app.user.createdAt ? app.user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>le derniere modification</th>
                                    <td>{{ app.user.updatedAt ? app.user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                </tbody> #}
                            </table>



                            <a class="btn btn-info" href="{{ path('user_edit', {'id': app.user.id}) }}">Modifier Profile</a>

                                <div class="col-sm-3">
                                    {{ include('user/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    <!-- end article 1 -->

                </div>
            </div>
        </div>
    </section>


{% endblock %}
